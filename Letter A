using System;

namespace Atividade_4___01
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Quantos anos vc tem?");
			int idade = Convert.ToInt32(Console.ReadLine());
			Console.WriteLine("vc tem carteira de motorista?");
			string carteira = Convert.ToString(Console.ReadLine());
			
			if (idade >= 18 && carteira == "sim"){
				Console.WriteLine("vc pode dirigir!!!");
			}
			else {
				Console.WriteLine("vc n pode dirigir ");
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
