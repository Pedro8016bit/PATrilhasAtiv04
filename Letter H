using System;

namespace Atividade_4___01
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("deseja comprar algum produto");
			string resp = Convert.ToString(Console.ReadLine());
			
			if (resp == "sim" || resp == "s"){
				Console.WriteLine("obr pela compra!!");
			}
			else{
				Console.WriteLine(">:(");
			}
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
