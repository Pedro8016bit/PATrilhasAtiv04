using System;

namespace Atividade_4___01
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("vc quer comprar um carro?");
			string inde = Convert.ToString(Console.ReadLine().ToLower());
			Console.WriteLine("vc tem dinheiro para isso?");
			string dindin = Convert.ToString(Console.ReadLine().ToLower());
			
			if (inde == "sim" && dindin == "sim"){
				Console.WriteLine("vc pode comprar um carro!!!");
			}
			else {
				Console.WriteLine("poxa que pena");
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
